            "program": "${workspaceRoot}/node_modules/.bin/nodeunit",
            "args": [
                "${workspaceRoot}/test/multi-storage-client-test.js"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ]
        }
    ]
